{# templates/post/new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}New Post{% endblock %}

{% block body %}
<div class="card">
    <div class="card-body">
        <h2 class="card-title mb-4">Create New Post</h2>
        
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}