{# templates/post/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Post{% endblock %}

{% block body %}
<div class="card">
    <div class="card-body">
        <h2 class="card-title mb-4">Edit Post</h2>
        
        {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary">{{ button_label|default('Update') }}</button>
            <a href="{{ path('home') }}" class="btn btn-secondary">Cancel</a>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}