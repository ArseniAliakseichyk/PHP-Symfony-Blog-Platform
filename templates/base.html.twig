<!DOCTYPE html>
<html lang="{{ app.request.locale|default('en') }}">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Symfony App
			{% endblock %}
		</title>

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

		<style>:root
		{
			--primary-color: rgb(184, 113, 21);
			--secondary-color: rgb(214, 214, 214);
			--bg-dark: rgb(41, 41, 41);
			--card-bg: rgb(60, 60, 60);
			--card-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
			--transition: all 0.3s ease;
		}

		body {
			font-family: 'Inter', sans-serif;
			background-color: var(--bg-dark);
			color: var(--secondary-color);
			line-height: 1.6;
		}

		.navbar {
			background: linear-gradient(90deg, var(--primary-color), rgb(196, 117, 13));
			box-shadow: var(--card-shadow);
		}

		.navbar-brand,
		.nav-link {
			color: #f9fafb !important;
			transition: var(--transition);
		}

		.nav-link:hover {
			color: rgb(247, 189, 0) !important;
			transform: translateY(-2px);
		}

		.container {
			max-width: 1200px;
			padding: 0 15px;
		}

		.card {
			background-color: var(--card-bg);
			border-radius: 12px;
			box-shadow: var(--card-shadow);
			transition: var(--transition);
		}

		.card:hover {
			transform: translateY(-5px);
		}

		.btn-primary {
			background-color: var(--primary-color);
			border: none;
			border-radius: 8px;
			padding: 10px 20px;
			font-weight: 500;
			color: #ffffff;
			transition: var(--transition);
		}

		.btn-primary:hover {
			background-color: rgb(230, 168, 0);
			transform: translateY(-2px);
		}

		.btn-danger {
			background-color: #ef4444;
			border: none;
			border-radius: 8px;
			color: #ffffff;
			transition: var(--transition);
		}

		.btn-danger:hover {
			background-color: #dc2626;
			transform: translateY(-2px);
		}

		.alert-success {
			background-color: rgba(16, 185, 129, 0.1);
			color: rgb(231, 183, 110);
			border: 1px solid rgb(185, 145, 16);
			border-radius: 8px;
			margin-bottom: 20px;
		}

		.alert-danger {
			background-color: rgba(239, 68, 68, 0.1);
			color: #f87171;
			border: 1px solid #ef4444;
			border-radius: 8px;
			margin-bottom: 20px;
		}

		h1,
		h2,
		h3,
		h4,
		h5,
		h6 {
			color: #f9fafb;
			font-weight: 600;
		}

		.form-control,
		.form-select {
			background-color: rgb(75, 75, 75);
			color: var(--secondary-color);
			border-radius: 8px;
			border: 1px solid #6b7280;
			transition: var(--transition);
		}

		.form-control:focus,
		.form-select:focus {
			border-color: var(--primary-color);
			box-shadow: 0 0 0 3px rgba(128, 84, 18, 0.3);
			background-color: rgb(90, 90, 90);
			color: var(--secondary-color);
		}

		.text-muted {
			color: rgba(255, 255, 255, 0.75) !important;
		}

		.card-title {
			color: #ffffff;
			margin-bottom: var(--bs-card-title-spacer-y);
		}

		.text-decoration-none.fw-medium {
			color: var(--primary-color);
			font-weight: 500;
		}

		.text-decoration-none.fw-medium:hover {
			color: rgb(161, 125, 46);
			text-decoration: underline;
		}

		@keyframes fadeIn {
			from {
				opacity: 0;
				transform: translateY(10px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		.fade-in {
			animation: fadeIn 0.5s ease-out;
		}

		.table {
			color: var(--secondary-color);
			background-color: var(--card-bg);
		}

		.table-hover tbody tr:hover {
			background-color: rgba(255, 255, 255, 0.05);
		}

		.table tbody tr td h5 > .text-muted.small {
			color: rgb(32, 136, 19) !important;
		}
		.table>:not(caption) > * > * {
			background-color: #e1e1e1;
		}
		.fw-bold {
			font-weight: 700 !important;
			color: rgb(225, 225, 225) !important;
		}
		.mb-0 {
			margin-bottom: 0 !important;
			color: rgb(168, 168, 168) !important;
		}

		.table th {
			color: #f9fafb;
			background-color: rgba(255, 255, 255, 0.1);
		}

		.form-label {
			color: #f9fafb;
			font-weight: 500;
		}

		.invalid-feedback {
			color: #f87171;
		}
	</style>

</head>
<body>
	<nav class="navbar navbar-expand-lg">
		<div class="container">
			<a class="navbar-brand" href="{{ path('home') }}">Symfony App</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav me-auto">
					<li class="nav-item">
						<a class="nav-link" href="{{ path('home') }}">Home</a>
					</li>
					à´—
					{% if is_granted('ROLE_ADMIN') %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('admin_users') }}">Users</a>
						</li>
					{% endif %}
				</ul>
				<ul class="navbar-nav">
					{% if app.user %}
						<li class="nav-item">
							<span class="nav-link">Hello,
								{{ app.user.email }}</span>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('security_logout') }}">Logout</a>
						</li>
					{% else %}
						<li class="nav-item">
							<a class="nav-link" href="{{ path('security_login') }}">Login</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{ path('app_register') }}">Register</a>
						</li>
					{% endif %}
				</ul>
			</div>
		</div>
	</nav>

	<div class="container mt-4 fade-in">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				{{ message }}
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endfor %}
		{% for message in app.flashes('error') %}
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				{{ message }}
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endfor %}

		{% block body %}{% endblock %}
	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body></html>
